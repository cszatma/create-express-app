{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es6", "es2016.array.include"],
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
