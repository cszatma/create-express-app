{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lerna": "lerna",
    "lint": "tslint --fix",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@types/node": "^10.0.6",
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "lint-staged": "^7.1.0",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.3"
  },
  "prettier": {
    "parser": "typescript",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.ts": [
      "tslint -c ./tslint.json --fix",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  }
}
