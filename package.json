{
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/@cszatma/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "lerna": "lerna",
    "lint": "tslint --fix",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^23.3.8",
    "@types/node": "^10.0.6",
    "cpx": "^1.5.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.1.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.ts": [
      "tslint -c ./tslint.json --fix",
      "git add"
    ],
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
